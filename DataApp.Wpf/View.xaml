<Window x:Name="Login" x:Class="DataApp.Wpf.View"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DataApp.Wpf"
        mc:Ignorable="d"
        Title="Login" Height="170.956" Width="300">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="103*"/>
            <ColumnDefinition Width="189*"/>
        </Grid.ColumnDefinitions>
        <TextBox x:Name="Username" HorizontalAlignment="Left" Height="31" Margin="20,10,0,0" TextWrapping="Wrap" Text="Username" VerticalAlignment="Top" Width="251" FontSize="16" Grid.ColumnSpan="2"/>
        <TextBox x:Name="Password" HorizontalAlignment="Left" Height="31" Margin="20,57,0,0" TextWrapping="Wrap" Text="Password" VerticalAlignment="Top" Width="251" FontSize="16" Grid.ColumnSpan="2"/>
        <Button x:Name="loginButton" Content="Reset" HorizontalAlignment="Left" Margin="92.015,93,0,0" VerticalAlignment="Top" Width="76" BorderBrush="#FFAAA5A5" Background="{x:Null}" Height="31" Grid.Column="1"/>
        <Button x:Name="resetButton" Content="Login" HorizontalAlignment="Left" Margin="11.015,93,0,0" VerticalAlignment="Top" Width="76" BorderBrush="#FFAAA5A5" Background="{x:Null}" Height="31" Grid.Column="1"/>

    </Grid>
</Window>
